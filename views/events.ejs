<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="/sass.css">
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">

    <title>Event Registration</title>
</head>
<body>

    <%- include('partials/navbar') %>

    <h1>Upcoming Events</h1>
    <table class="container">
        <thead>
            <tr>
                <th>Event Name</th>
                <th>Date</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% events.forEach((event) => { %>
                <tr>
                    <td><%= event.name %></td>
                    <td><%= event.date %></td>
                    <td><%= event.description %></td>
                    <td>
                        <form action="/participants/<%= event.name %>" method="GET" style="display:inline;">
                            <button type="submit">Participants</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <div class="formcontainer">

    <form action="/register" method="POST">
  
        <div class="segment">
          <h1>Sign up</h1>
        </div>
        
        <label>Name:</label>
        <input type="text" name="name" required><br>
        <label>Email:</label>
        <input type="email" name="email" required><br>
        <label>Select Event:</label>
        <select name="event">
            <% events.forEach((event) => { %>
                <option value="<%= event.name %>"><%= event.name %></option>
            <% }); %>
        </select><br>
        <button class="red" type="submit"><i class="icon ion-md-lock"></i> Register</button>
        
      </form>
    </div> 
    <%- include('partials/footer') %>
    
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>
</html>
